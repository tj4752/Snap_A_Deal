<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e5f4fc"
    android:clickable="true"
    android:foreground="@drawable/custom_bg"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:contentPadding="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="55dp"
            android:layout_height="55dp">

            <FrameLayout
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/def_logo"
                    app:siBorderColor="#eeeeee"
                    app:siBorderWidth="1dp" />

                <ImageView
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="end|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">




            <LinearLayout

                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginBottom="2dp"
                                android:textStyle="bold"
                                android:id="@+id/name"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:maxLines="1"
                                android:text="Name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/date"
                                android:textSize="10sp"
                                android:gravity="end"
                                android:layout_gravity="end|center_horizontal"
                                android:text="@string/today"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </FrameLayout>




                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textAlignment="viewStart"
                                android:layout_gravity="start"
                                android:gravity="start"
                                android:layout_marginBottom="2dp"
                                android:id="@+id/short_msg"
                                android:textSize="14sp"
                                android:maxLines="1"
                                android:text="Message"
                                android:maxWidth="200dp"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_gravity="end"
                                android:id="@+id/nbrMessage"
                                android:paddingEnd="5dp"
                                android:paddingStart="5dp"
                                android:textStyle="bold"
                                android:textSize="10dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/defaultWhiteColor"
                                android:background="@drawable/bg_notify"
                                android:text="2066"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </FrameLayout>


                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>



        </LinearLayout>





    </LinearLayout>

</androidx.cardview.widget.CardView>