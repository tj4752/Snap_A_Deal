<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/content_my_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="@dimen/width_component"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/getting"
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_horizontal"
                        android:text="1531 boulevard mohamed vi jamila 1 CASABLANCA"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/getloc"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/userbuttonstyle"
                        android:text="get"
                        android:textColor="@color/defaultWhiteColor"
                        android:visibility="gone" />


                    <Button
                        android:id="@+id/findstore"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/userbuttonstyle"
                        android:text="Trouver pharmacie"
                        android:textColor="@color/defaultWhiteColor" />


                    <Button
                        android:id="@+id/createstore"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/userbuttonstyle"
                        android:text="Ajouter votre pharmacie"
                        android:textColor="@color/defaultWhiteColor" />


                    <Button
                        android:id="@+id/connect"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/userbuttonstyle"
                        android:text="Se connecter"
                        android:textColor="@color/defaultWhiteColor" />



                </LinearLayout>

            </LinearLayout>



    </LinearLayout>

    <LinearLayout

        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/splashImage"
                    android:padding="60sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/splash_backgound" />




            </LinearLayout>



        </FrameLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progressBar"
            android:visibility="visible"
            style="@style/SpinKitView.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            app:SpinKit_Color="@color/colorAccent" />


    </LinearLayout>


    <include
        android:id="@+id/error"
        layout="@layout/fragment_error_manage" />

    <include
        android:id="@+id/empty"
        layout="@layout/fragment_empty_list_manage" />









</LinearLayout>